{
    "name": "todo-app",
    "private": true,
    "version": "2.2",
    "type": "module",
    "main": "main.js",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "electron-dev": "cross-env VITE_DEV_SERVER=true electron .",
        "dist": "npm run build && electron-builder",
        "lint": "eslint .",
        "preview": "vite preview"
    },
    "build": {
        "appId": "com.todo.app",
        "productName": "todo or not todo?",
        "executableName": "todo-app",
        "files": [
            "dist/**/*",
            "main.js",
            "preload.js",
            "package.json"
        ],
        "directories": {
            "output": "release",
            "buildResources": "build"
        },
        "win": {
            "icon": "build/tray-icon.ico",
            "target": [
            "nsis"
            ],
            "artifactName": "${productName}-${version}-Setup-${arch}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true
        },
        "mac": {
            "icon": "build/tray-icon.icns"
        },
        "linux": {
            "icon": "build"
        }
    },
    "dependencies": {
        "react": "^19.1.1",
        "react-dom": "^19.1.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.36.0",
        "@types/node": "^24.6.0",
        "@types/react": "^19.1.16",
        "@types/react-dom": "^19.1.9",
        "@vitejs/plugin-react": "^5.0.4",
        "cross-env": "^10.1.0",
        "electron": "^39.2.4",
        "electron-builder": "^26.0.12",
        "eslint": "^9.36.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.22",
        "globals": "^16.4.0",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.45.0",
        "vite": "^7.1.7"
    }
}
