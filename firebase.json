{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/config/**", "function": "pushServer" },
      { "source": "/api/**", "function": "pushServer" },
      { "source": "/notify-test", "function": "pushServer" },
      { "source": "/api/push/send", "function": "pushServer" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
